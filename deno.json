{
  "compilerOptions": {
    "allowJs": true,
    "lib": [],
    "strict": true
  },
  "importMap": "import_map.json",
  "fmt": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "dist/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "files": {
      "include": [
        "test/"
      ],
      "exclude": [
        "test/testdata/"
      ]
    }
  }
}
